<?xml version="1.0"?>
<sdf version="1.9">
  <model name="diffbot">
    <pose>10.0 5.0 2.0 0 0 0</pose>

    <!-- base: 底が地面に触れないよう中心を z=0.16 に上げる（底=0.06m） -->
    <link name="base_link">
      <pose>0 0 0.16 0 0 0</pose>
      <inertial>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.1</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.1</iyy><iyz>0</iyz>
          <izz>0.1</izz>
        </inertia>
      </inertial>
      <collision name="base_col">
        <geometry><box><size>0.4 0.3 0.2</size></box></geometry>
      </collision>
      <visual name="base_vis">
        <geometry><box><size>0.4 0.3 0.2</size></box></geometry>
        <!-- 白 -->
        <material>
          <ambient>0.9 0.9 0.9 1</ambient>
          <diffuse>1 1 1 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
          <emissive>0.02 0.02 0.02 1</emissive>
          <pbr><metal><albedo>1 1 1 1</albedo><metalness>0.0</metalness><roughness>0.4</roughness></metal></pbr>
        </material>
      </visual>
    </link>

    <!-- left wheel（リンクは回転させず、ジオメトリだけ roll=90°） -->
    <link name="left_wheel">
      <pose>0 0.15 0.05 0 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia><ixx>0.001</ixx><iyy>0.001</iyy><izz>0.001</izz></inertia>
      </inertial>
      <collision name="col">
        <pose>0 0 0 1.5707 0 0</pose> <!-- Z→Y -->
        <geometry><cylinder><radius>0.05</radius><length>0.02</length></cylinder></geometry>
        <surface><friction><ode><mu>1.2</mu><mu2>1.2</mu2></ode></friction></surface>
      </collision>
      <visual name="vis">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry><cylinder><radius>0.05</radius><length>0.02</length></cylinder></geometry>
        <material>
          <ambient>0.9 0.9 0.9 1</ambient>
          <diffuse>1 1 1 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
          <emissive>0.02 0.02 0.02 1</emissive>
          <pbr><metal><albedo>1 1 1 1</albedo><metalness>0.0</metalness><roughness>0.4</roughness></metal></pbr>
        </material>
      </visual>
    </link>

    <!-- right wheel -->
    <link name="right_wheel">
      <pose>0 -0.15 0.05 0 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia><ixx>0.001</ixx><iyy>0.001</iyy><izz>0.001</izz></inertia>
      </inertial>
      <collision name="col">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry><cylinder><radius>0.05</radius><length>0.02</length></cylinder></geometry>
        <surface><friction><ode><mu>1.2</mu><mu2>1.2</mu2></ode></friction></surface>
      </collision>
      <visual name="vis">
        <pose>0 0 0 1.5707 0 0</pose>
        <geometry><cylinder><radius>0.05</radius><length>0.02</length></cylinder></geometry>
        <material>
          <ambient>0.9 0.9 0.9 1</ambient>
          <diffuse>1 1 1 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
          <emissive>0.02 0.02 0.02 1</emissive>
          <pbr><metal><albedo>1 1 1 1</albedo><metalness>0.0</metalness><roughness>0.4</roughness></metal></pbr>
        </material>
      </visual>
    </link>

    <!-- caster（床安定用） -->
    <link name="caster">
      <pose>-0.15 0 0.03 0 0 0</pose>
      <inertial><mass>0.1</mass><inertia><ixx>1e-5</ixx><iyy>1e-5</iyy><izz>1e-5</izz></inertia></inertial>
      <collision name="col"><geometry><sphere><radius>0.03</radius></sphere></geometry></collision>
      <visual name="vis"><geometry><sphere><radius>0.03</radius></sphere></geometry></visual>
    </link>

    <!-- joints: Y軸回り -->
    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent><child>left_wheel</child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-1e16</lower><upper>1e16</upper></limit>
        <dynamics><damping>0.05</damping></dynamics>
      </axis>
    </joint>
    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent><child>right_wheel</child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-1e16</lower><upper>1e16</upper></limit>
        <dynamics><damping>0.05</damping></dynamics>
      </axis>
    </joint>
    <joint name="caster_joint" type="ball">
      <parent>base_link</parent><child>caster</child>
    </joint>

    <!-- DiffDrive -->
    <plugin
      filename="ignition-gazebo-diff-drive-system"
      name="ignition::gazebo::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.30</wheel_separation>
      <wheel_radius>0.05</wheel_radius>
      <topic>cmd_vel</topic>           <!-- GZ側: /model/diffbot/cmd_vel -->
      <odom_topic>odometry</odom_topic>
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <odom_publisher>true</odom_publisher>
      <max_linear_velocity>1.0</max_linear_velocity>
      <max_angular_velocity>2.0</max_angular_velocity>
      <use_velocity_commands>true</use_velocity_commands>
    </plugin>

    <!-- Odometry（保険） -->
    <plugin
      filename="ignition-gazebo-odometry-publisher-system"
      name="ignition::gazebo::systems::OdometryPublisher">
      <odom_topic>odometry</odom_topic>
      <world_frame>world</world_frame>
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <publish_tf>true</publish_tf>
      <publish_odom>true</publish_odom>
    </plugin>
  </model>
</sdf>
